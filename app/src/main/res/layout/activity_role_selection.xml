<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Up Your Profile"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help us personalize your experience"
        android:textColor="#9CA3AF"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"/>

    <!-- I am a... label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am a..."
        android:textColor="#9CA3AF"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <!-- Role Options -->
    <!-- Startup Founder -->
    <LinearLayout
        android:id="@+id/roleStartupFounder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option_unselected"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/imgStartupFounder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_unselected"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_trends"
            app:tint="#9CA3AF"/>

        <TextView
            android:id="@+id/txtStartupFounder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Startup Founder"
            android:textColor="#9CA3AF"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Investor -->
    <LinearLayout
        android:id="@+id/roleInvestor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option_unselected"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/imgInvestor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_unselected"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_finance"
            app:tint="#9CA3AF"/>

        <TextView
            android:id="@+id/txtInvestor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Investor"
            android:textColor="#9CA3AF"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Marketer -->
    <LinearLayout
        android:id="@+id/roleMarketer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option_unselected"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/imgMarketer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_unselected"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_person"
            app:tint="#9CA3AF"/>

        <TextView
            android:id="@+id/txtMarketer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marketer"
            android:textColor="#9CA3AF"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Student/Researcher -->
    <LinearLayout
        android:id="@+id/roleStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option_unselected"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/imgStudent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_unselected"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_case"
            app:tint="#9CA3AF"/>

        <TextView
            android:id="@+id/txtStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student/Researcher"
            android:textColor="#9CA3AF"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Continue Button -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/dark_button"
        android:layout_marginBottom="24dp"/>

</LinearLayout>
