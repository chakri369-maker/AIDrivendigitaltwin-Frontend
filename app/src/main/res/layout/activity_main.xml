<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/bg_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Icon -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/arrow_up_float"
        android:tint="#3B82F6" />

    <!-- Title -->
    <TextView
        android:text="Digital Twin AI"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Tagline -->
    <TextView
        android:text="Predict. Analyze. Stay Ahead."
        android:textSize="14sp"
        android:textColor="#9CA3AF"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Features -->
    <TextView
        android:text="✨ AI-Powered Market Predictions"
        android:textColor="#E5E7EB"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="✨ Real-Time Competitor Tracking"
        android:textColor="#E5E7EB"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="✨ Smart Trend Analysis"
        android:textColor="#E5E7EB"
        android:textSize="14sp"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Get Started Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGetStarted"
        android:text="Get Started"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/gradient_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

</LinearLayout>
