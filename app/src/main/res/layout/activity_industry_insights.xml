<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark"
    android:orientation="vertical">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back_arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Industry Insights"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deep dive into sector performance"
                android:textColor="#9CA3AF"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Industry Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tabTechnology"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="âš™ï¸ Technology"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:background="@drawable/option_selected"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tabRetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ›’ Retail"
            android:textColor="#9CA3AF"
            android:textSize="13sp"
            android:background="@drawable/card_bg"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tabHealthcare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â¤ï¸ Healthcare"
            android:textColor="#9CA3AF"
            android:textSize="13sp"
            android:background="@drawable/card_bg"
            android:paddingVertical="12dp"
            android:gravity="center"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="24dp">

            <!-- Sector Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/imgSectorIcon"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_icon_selected"
                        app:backgroundTint="#3B82F6"
                        android:padding="14dp"
                        app:srcCompat="@drawable/ic_tech"
                        app:tint="#FFFFFF"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtSectorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Technology"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sector"
                            android:textColor="#D1D5DB"
                            android:textSize="14sp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/txtGrowth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+34.5%"
                                android:textColor="#10B981"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" â†—"
                                android:textColor="#10B981"
                                android:textSize="16sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Companies"
                            android:textColor="#9CA3AF"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/txtCompanies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,247"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Market Cap"
                            android:textColor="#9CA3AF"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/txtMarketCap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$4.2T"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trend"
                            android:textColor="#9CA3AF"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/txtTrend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†— Strong"
                            android:textColor="#10B981"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 6-Month Performance Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6-Month Performance"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <!-- Chart Placeholder -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <!-- Y-Axis Labels and Chart Area -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!-- Y-Axis -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="end"
                            android:paddingEnd="8dp">

                            <TextView
                                android:id="@+id/yAxis100"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="100"
                                android:textColor="#6B7280"
                                android:textSize="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="75"
                                android:textColor="#6B7280"
                                android:textSize="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="50"
                                android:textColor="#6B7280"
                                android:textSize="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="25"
                                android:textColor="#6B7280"
                                android:textSize="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0"
                                android:textColor="#6B7280"
                                android:textSize="10sp"/>
                        </LinearLayout>

                        <!-- Chart Area - Placeholder -->
                        <View
                            android:id="@+id/chartView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#1F2937"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- X-Axis Labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingStart="32dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jan"
                        android:textColor="#6B7280"
                        android:textSize="10sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Feb"
                        android:textColor="#6B7280"
                        android:textSize="10sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mar"
                        android:textColor="#6B7280"
                        android:textSize="10sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Apr"
                        android:textColor="#6B7280"
                        android:textSize="10sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="May"
                        android:textColor="#6B7280"
                        android:textSize="10sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jun"
                        android:textColor="#6B7280"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Key Metrics Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key Metrics"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <!-- Metric 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtMetric1Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI/ML Adoption"
                        android:textColor="#9CA3AF"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txtMetric1Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="78%"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtMetric1Change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+12%"
                    android:textColor="#10B981"
                    android:textSize="14sp"
                    android:background="@drawable/bg_icon_selected"
                    app:backgroundTint="#1F4D3A"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"/>
            </LinearLayout>

            <!-- Metric 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtMetric2Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cloud Migration"
                        android:textColor="#9CA3AF"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txtMetric2Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65%"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtMetric2Change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+8%"
                    android:textColor="#10B981"
                    android:textSize="14sp"
                    android:background="@drawable/bg_icon_selected"
                    app:backgroundTint="#1F4D3A"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"/>
            </LinearLayout>

            <!-- Metric 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtMetric3Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cybersecurity Spend"
                        android:textColor="#9CA3AF"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txtMetric3Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$6.1B"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtMetric3Change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+15%"
                    android:textColor="#10B981"
                    android:textSize="14sp"
                    android:background="@drawable/bg_icon_selected"
                    app:backgroundTint="#1F4D3A"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
